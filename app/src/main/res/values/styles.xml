<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlHighlight">@color/colorAccent</item>
    <item name="colorButtonNormal">@color/colorAccent</item>
    <item name="android:navigationBarColor">@color/card_view_background</item>

    <item name="bottomSheetDialogTheme">@style/Widget.AppTheme.BottomSheet</item>
  </style>

  <style name="AppTheme.NavBar" parent="ThemeOverlay.MaterialComponents.Light">
    <item name="android:windowBackground">@null</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowContentOverlay">@null</item>

    <item name="bottomSheetDialogTheme">@style/Widget.AppTheme.BottomSheet</item>
  </style>

  <style name="AppTheme.NoActionBar.DarkNav" parent="AppTheme.NoActionBar">
    <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
  </style>

  <style name="AppTheme.DarkNav" parent="AppTheme">
    <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
  </style>

  <style name="Widget.AppTheme.BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@color/card_view_background</item>
    <item name="android:colorBackground">@color/card_view_background</item>
    <item name="bottomSheetStyle">@style/AppModalStyle</item>

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlHighlight">@color/colorAccent</item>
    <item name="colorButtonNormal">@color/colorAccent</item>

    <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent</item>
    <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.MediumComponent</item>
    <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent</item>
  </style>

  <style name="AppModalStyle" parent="Widget.MaterialComponents.BottomSheet.Modal"></style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

  <style name="starsRatingBar" parent="@android:style/Widget.RatingBar">
    <item name="android:progressDrawable">@drawable/orange_rating</item>
    <item name="android:minHeight">26dip</item>
    <item name="android:maxHeight">26dip</item>
  </style>

  <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
    <item name="cornerFamily">cut</item>
    <item name="cornerSize">4dp</item>
  </style>

  <style name="ShapeAppearance.MyApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
    <item name="cornerFamily">cut</item>
    <item name="cornerSize">8dp</item>
  </style>

  <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">16dp</item>
  </style>

  <style name="PrimaryFlatButton" parent="Theme.MaterialComponents.Light">
    <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    <item name="colorControlHighlight">@color/colorAccent</item>
  </style>

  <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
    <item name="android:background">@drawable/rounded_button</item>
    <item name="android:textColor">@color/darkSecondaryTitle</item>
    <item name="android:paddingStart">@dimen/filter_button_padding</item>
    <item name="android:paddingEnd">@dimen/filter_button_padding</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:layout_height">35dp</item>
  </style>

  <style name="AppTheme.RoundedCornerMaterialButtonFilled" parent="Widget.AppCompat.Button.Colored">
    <item name="android:background">@drawable/rounded_button_filled</item>
    <item name="android:textColor">@color/card_view_background</item>
    <item name="android:paddingStart">@dimen/filter_button_padding</item>
    <item name="android:paddingEnd">@dimen/filter_button_padding</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:layout_height">35dp</item>
  </style>
</resources>
